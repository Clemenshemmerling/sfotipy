@import "normalize.styl"

gris_oscuro = #333333
gris_claro  = #818181

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em

.container
	padding 1.4rem
	font-size 0
	text-align center
.border-bottom
	border-bottom 1px solid gris_claro


.name
	color gris_oscuro

.author
	color gris_claro
.menu
	display none

.relative
	position relative

.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
		
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left  
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0 



